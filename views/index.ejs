<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>LIST</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <header>
      <a class="header-logo" href="/">LIST</a>
    </header>
    <div class="container">
      <div class="container-header">
        <h1>Daftar Belanjaan</h1>
        <a href="/new" class="new-button">+ Tambahkan</a>
      </div>
      <div class="index-table-wrapper">
        <div class="table-head">
          <span class="id-column">ID</span>
          <span>Item</span>
        </div>
        <!-- Gunakan EJS untuk mendefinisikan constant item -->
        <!--% const items = [
          {id: 1, name: 'kentang'},
          {id: 2, name: 'wortel'},
          {id: 3, name: 'bawang'}
        ]; %-->

        <ul class="table-body">
          <% items.forEach((item) => { %>
              <li>
                <div class="item-data">
                  <span class="id-column"><%= item.id %></span>
                  <span class="name-column"><%= item.name %></span>
                </div>
                <div class="item-menu">
                  <!-- Tambahkan tag form -->
                  <a href="/edit/<%= item.id %>">Edit</a>
                  <form action="/delete/<%= item.id %>" method="POST">
                    <input type="submit" value="Hapus">
                  </form>
                </div>
              </li>
          <% }); %>
        </ul>
      </div>
    </div>
  </body>
</html>